---
import Footer from "@components/sections/Footer";
import GithubCorner from "@components/ui/GithubCorner";
import PageAnimation from "@components/ui/PageAnimation";
export interface Props {
	title: string;
	description?: string;
	showFooter?: boolean;
}

const { title, description } = Astro.props;
const { showFooter = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    {description && <meta name="description" content={description} />}
    {description && <meta property="og:description" content={description} />}
    <meta name="theme-color" content="#ffffff" />
    <title>{title}</title>
    <script>
      history.scrollRestoration = "manual";
      window.addEventListener("load", () => {
        window.scrollTo(0, 0);
      });
    </script>
  </head>
  <body class="bg-background font-sans text-text">
    <GithubCorner href="https://github.com/indiecodermm/badee-landing" />
    <div class="mx-auto min-h-screen max-w-[800px]">
      <PageAnimation client:load>
        <main>
          <slot />
        </main>
        {showFooter && <Footer />}
      </PageAnimation>
    </div>
  </body>
</html>
